<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="@dimen/list_hight"
    android:background="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/image_list"
        style="@style/image_style"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background_list">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|left"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/miwok_library"
                style="@style/text_item_style"
                android:textStyle="bold"
                android:text="@string/notilu" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="2dp"
                android:background="@color/image_background" />

            <TextView
                android:id="@+id/english_library"
                style="@style/text_item_style"
                android:text="@string/one" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/play_button_layout"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:id="@+id/play_button"
                android:layout_width="@dimen/button_play"
                android:layout_height="@dimen/button_play"
                android:src="@drawable/ic_play_arrow_white_24dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/item_padding"
                />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>